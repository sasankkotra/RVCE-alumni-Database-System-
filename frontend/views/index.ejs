<!-- CTA Section -->
<section class="cta-section py-5">
    <div class="container text-center">
        <h2 class="mb-4">Ready to Connect?</h2>
        <p class="lead mb-4">Join the RVCE Alumni community today and unlock endless opportunities</p>
        <% if (!user) { %>
            <a href="/register" class="btn btn-rvce-gold btn-lg">Get Started</a>
        <% } %>
    </div>
</section>

<script>
// Load featured alumni on homepage
async function loadFeaturedAlumni() {
    try {
        const response = await fetch('/api/alumni/public?limit=6');
        const data = await response.json();
        
        if (data.success && data.data.length > 0) {
            const container = document.getElementById('featuredAlumni');
            container.innerHTML = data.data.slice(0, 6).map(alumnus => `
                <div class="col-md-4 mb-4">
                    <div class="card h-100 text-center">
                        <div class="card-body">
                            <div class="mb-3">
                                <i class="fas fa-user-circle fa-3x text-maroon"></i>
                            </div>
                            <h5 class="card-title">${alumnus.name}</h5>
                            <p class="text-muted mb-2">${alumnus.branch} '${String(alumnus.graduation_year).slice(-2)}</p>
                            ${alumnus.company ? `<p class="mb-2"><i class="fas fa-building text-gold me-1"></i>${alumnus.company}</p>` : ''}
                            ${alumnus.city ? `<p class="text-muted small"><i class="fas fa-map-marker-alt me-1"></i>${alumnus.city}</p>` : ''}
                        </div>
                    </div>
                </div>
            `).join('');
        }
    } catch (error) {
        console.error('Load featured alumni error:', error);
    }
}

// Load on page load
if (document.getElementById('featuredAlumni')) {
    loadFeaturedAlumni();
}
</script>
