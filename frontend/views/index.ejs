<section class="py-5" style="background-color: #f8f9fa;">
    <div class="container">
        <div class="text-center mb-5">
            <h2><i class="fas fa-users text-maroon me-2"></i>Meet Our Alumni</h2>
            <p class="text-muted">Connect with verified RVCE alumni from around the world</p>
        </div>
        <div class="row" id="featuredAlumni">
            <!-- Featured alumni will load here -->
        </div>
        <div class="text-center mt-4">
            <a href="/directory" class="btn btn-rvce-maroon">
                <i class="fas fa-users me-2"></i>View Full Directory
